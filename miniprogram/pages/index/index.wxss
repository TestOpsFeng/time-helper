/* miniprogram/pages/index/index.wxss */

page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container{
  height: 100%;
  display: flex;
  flex-direction: column;
}

.quadrant{
  display: flex;
  flex-direction: column;
  flex: 1;
}

#one-quadrant{
  flex: 1;
  border: #8a8a8a solid 0.2rpx;
  border-top: none;
  border-right: none;
  background-color: #fdeaf2;
}
#two-quadrant{
  flex: 1;
  border-bottom: #8a8a8a solid 0.2rpx;
  background-color: #e0fde2;
}
#three-quadrant{
  flex: 1;
  border-top: none;
  border-left: #8a8a8a solid 0.2rpx;
  background-color: #fdfbde;
}
#four-quadrant{
  flex: 1;
  border-top: none;
  background-color: #e0f4fe;
}

.one-two{
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
}
.three-four{
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
}

movable-area {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.header{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #c5c5c5;
  width: 100%;
  height: 60rpx;
  border-bottom: #e6e6e6 solid 1rpx;
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}
.title{
  font-family: 楷体, Arial, Helvetica, sans-serif;
  flex: 5;
  display: flex;
  justify-content: center;
  /* padding-left: 70rpx; */
}
.icon{
  flex: 1;
  align-items: center;
}
.content{
  display: flex;
  width: 90%;
  height: 100%;
  margin-top: 20rpx;
  margin-left: 20rpx;
  flex-direction: column;
}

.top-textarea{
  height: 80%;
}
.bottom-textarea{
  height: 64%;
}

.plan{
  width: 100%;
}
.move-plan{
  width: 350rpx;
}